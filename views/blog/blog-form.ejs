<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Your Blog</title>
    <%- include("../partials/cssCDN", { innerRoute: true }) %>
</head>

<body>
    <%- include('../partials/navbar') %>
    <div class="container mt-4 text-white">
        <form action="/blogs/add-blog" method="post" enctype="multipart/form-data">

            <input type="hidden" name="userJSON" value="<%= JSON.stringify(user) %>">

            <div class="mb-3">
                <label for="formFile" class="form-label">Enter cover image of your blog:</label>
                <input class="form-control" name="imageTaker" type="file" accept="image/*" id="formFile">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Enter Title of your Blog: </label>
                <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text-white">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Describe your Thoughs or Perspectives:</label>
                <textarea type="text" name="description" class="form-control" id="exampleInputPassword1"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-warning">
                <a style="text-decoration: none; color: white; " href="/">Back</a>
            </button>
        </form>
    </div>
</body>
<%- include('../partials/scriptCDN') %>
</html>